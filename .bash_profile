#
# General
#
set -o vi

#
# Alias
#
alias ls='ls -aFhG'
alias lf='ls -alFhG'
alias cls='clear'

#
# Color
#
export TERM=xterm-256color
export LSCOLORS=gxfxbEaEBxxEhEhBaDaCaD

#
# rbenv
#
export PATH=$HOME/.rbenv/shims:$PATH

#
# pyenv
#
export PATH=$HOME/.pyenv/shims:$PATH

#
# vim
#
export PATH=/Applications/MacVim.app/Contents/bin:$PATH

